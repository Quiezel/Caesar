/* package whatever; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Ideone
{
	
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner reader = new Scanner(System.in);  // Reading from System.in
		System.out.println("Introduce el mensaje: ");
		String mensaje = reader.next(); // Scans the next token of the input as an string.
		System.out.println("Introduce la llave: ");
		String llave = reader.next(); // Scans the next token of the input as an string.
		int lDM = 0;
		int lDL = 0;
		String descifrado = "";
		lDM = mensaje.length();
		lDL = llave.length();
		for (int i=0;i<lDM;i++){
			char a= mensaje.charAt(i);
			int r = i%lDL;
			int d = (llave.charAt(r)-64);
			int n = a-d;
			if (n>90){
    			n= n-26;
    		}
    		else if (n<65){
    			n= n+26;
    		}
			descifrado = descifrado + (char)n;
		}
    	System.out.println(mensaje);
		System.out.println(llave);
		System.out.println(descifrado);
	}
}
